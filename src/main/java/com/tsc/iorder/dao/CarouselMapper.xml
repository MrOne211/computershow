<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tsc.iorder.dao.CarouselMapper">
<select id="list" resultType="com.tsc.iorder.domain.Carousel" parameterType="com.tsc.iorder.domain.SearchParam">
    select * from i_carousel where description like '%${input}%'
</select>
<select id="findById" parameterType="java.lang.Integer" resultType="com.tsc.iorder.domain.Carousel">
    select * from i_carousel where id = #{id}
</select>
<select id="search" resultType="java.lang.String">
    select path from i_carousel where isShow = 1
</select>
<select id="findSrc" parameterType="java.lang.String" resultType="com.tsc.iorder.domain.Carousel">
    select * from i_carousel where path = #{string}
</select>
<update id="updateIsShow" parameterType="com.tsc.iorder.domain.SearchParam">
    update i_carousel set isShow = #{event} where id = #{id}
</update>
<update id="show" parameterType="com.tsc.iorder.domain.SearchParam">
     update i_carousel set isShow = 1 where id = #{id}
</update>
 <update id="hidden" parameterType="com.tsc.iorder.domain.SearchParam">
     update i_carousel set isShow = 0 where id = #{id}
 </update>
<update id="update" parameterType="com.tsc.iorder.domain.Carousel">
    update i_carousel set path = #{path}, description = #{description} where id= #{id}
</update>
 <insert id="addCarousel" parameterType="com.tsc.iorder.domain.Carousel">
     insert into i_carousel(path,description) values(#{path},#{description})
 </insert>
 <delete id="delete" parameterType="com.tsc.iorder.domain.SearchParam">
    delete from i_carousel where id = #{id}
 </delete>
</mapper>